<!-- Search and Filter Controls -->
<div class="search-container">
  <div class="search-controls">
    <div class="product-search">
      <label for="collection-search">Search Products</label>
      <input 
        type="text" 
        id="collection-search" 
        placeholder="Search by name or SKU..." 
        class="search-input"
        autocomplete="off"
      >
    </div>
    <div class="collection-filter">
      <label for="collection-select">Filter by Collection</label>
      <select id="collection-select" class="collection-select">
        <option value="all">All Collections</option>
        {% for collection in collections %}
          <option value="{{ collection.handle }}">{{ collection.title }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
</div>

<style>
  .search-container {
    background: #f8f9fa;
    padding: 24px;
    border-radius: 12px;
    margin-bottom: 32px;
    border: 1px solid #e9ecef;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  
  .search-controls {
    display: flex;
    gap: 32px;
    align-items: end;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .collection-filter,
  .product-search {
    display: flex;
    flex-direction: column;
    gap: 8px;
    min-width: 280px;
  }
  
  .collection-filter {
    flex: 1;
  }
  
  .product-search {
    flex: 2;
  }
  
  .collection-filter label,
  .product-search label {
    font-weight: 600;
    color: #495057;
    font-size: 14px;
    margin-bottom: 4px;
  }
  
  .collection-select,
  .search-input {
    padding: 12px 16px;
    border: 2px solid #dee2e6;
    border-radius: 8px;
    font-size: 16px;
    background: white;
    transition: all 0.3s ease;
    font-family: inherit;
  }
  
  .collection-select:focus,
  .search-input:focus {
    outline: none;
    border-color: #333333;
    box-shadow: 0 0 0 3px rgba(51, 51, 51, 0.15);
    transform: translateY(-1px);
  }
  
  .collection-select:hover,
  .search-input:hover {
    border-color: #333333;
  }
  
  .search-input::placeholder {
    color: #6c757d;
    font-style: italic;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .search-container {
      padding: 20px 16px;
      margin-bottom: 24px;
    }
    
    .search-controls {
      flex-direction: column;
      gap: 20px;
      align-items: stretch;
    }
    
    .collection-filter,
    .product-search {
      min-width: 100%;
    }
    
    .collection-select,
    .search-input {
      font-size: 16px; /* Prevent zoom on iOS */
    }
  }
  
  @media (max-width: 480px) {
    .search-container {
      padding: 16px 12px;
      border-radius: 8px;
    }
    
    .search-controls {
      gap: 16px;
    }
  }
</style> 